<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.cfmaterial.retailer.RetailersFragment">

    <!--    <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_retailers_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />-->

    <LinearLayout
        android:id="@+id/fragment_retailers_progress_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_retailers_progress_bar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/cellfire_loading_anim" />

        <TextView
            android:id="@+id/fragment_retailers_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Getting location..."
            android:textSize="16sp" />

    </LinearLayout>


    <GridView
        android:id="@+id/fragment_retailers_gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp">

    </GridView>

</FrameLayout>


