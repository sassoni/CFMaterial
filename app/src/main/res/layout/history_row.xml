<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/history_savings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:text="$1.00"
        android:textColor="@color/accent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/history_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/history_savings"
        android:layout_weight="1"
        android:text="Mon, May 20"
        android:textColor="@color/text_body_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/history_expand"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/history_savings"
        android:layout_gravity="center_vertical"
        android:paddingTop="10dp"
        android:background="@drawable/ic_action_expand" />

</RelativeLayout>