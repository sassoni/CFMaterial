<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/history_offer_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/history_offer_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/history_offer_image"
        android:layout_toRightOf="@+id/history_offer_image"
        android:text="Saved $1.50"
        android:textColor="@color/catalina_orange"
        android:textSize="18sp"
        android:padding="2.5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/history_offer_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2.5dp"
        android:layout_below="@+id/history_offer_heading"
        android:layout_toRightOf="@+id/history_offer_image"
        android:maxLines="2"
        android:text="On any ONE(1) six pack or larger"
        android:textSize="14sp" />

</RelativeLayout>